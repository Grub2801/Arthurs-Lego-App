<h1>Listing figures</h1>
<%= link_to 'New Figure', new_figure_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>Date Created</th>
    <th>Description</th>
    <th></th>
  </tr>

  <% @figures.each do |figure| %>
    <tr>
      <td><%= figure.title %></td>
      <% if figure.photo.attached? %>
        <td><%= image_tag figure.photo %></td>
      <% end %>
      <td><%= figure.date %></td>
      <td><%= figure.description %></td>
      <td><%= link_to 'Show', figure_path(figure) %></td>
      <td><%= link_to 'Edit', edit_figure_path(figure) %></td>
      <td><%= link_to 'Delete', figure_path(figure),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>